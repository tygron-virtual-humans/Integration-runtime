init module {
	beliefs{
		% havebeer is set when we get beer.
	}
	goals{
		sippingbeer.
	}
	actionspec{
		sip(B) {
		   pre{ B==beer, havebeer }
		   post{ sippingbeer }
		}
	}
}

main module {
	program[order=random] {
		if bel(true) then sip(beer).
	}
}

event module {
	program {
		if bel(havebeer) then delete(havebeer).
		if bel(percept(has(owner,beer))) then insert(havebeer).
	}
}
