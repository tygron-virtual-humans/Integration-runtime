init module{
   beliefs{
      nrOfPrintedLines(0).
   }
   
   goals{
      nrOfPrintedLines(10).
   }
}

main module [exit = nogoals] {
   program{
      if goal( nrOfPrintedLines(10) ) then print("Hello, world!").
   }
}

event module{
   program{
      if bel( nrOfPrintedLines(Count), NewCount is Count + 1 )
      then delete( nrOfPrintedLines(Count) ) + insert( nrOfPrintedLines(NewCount) ).
   }
}