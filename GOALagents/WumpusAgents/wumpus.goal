init module {
	knowledge {
		outsideCave :- not(insideCave).
	}

	beliefs {
		insideCave.
		has(arrow).
		wumpusIsAlive.
		steps(0).
	}

	goals {
		has(gold), outsideCave.
	}
	
	actionspec{
			forward {
				pre{ true  }
				post{ true }
			}
			turn(X) {
				pre{ (X==left; X==right) }
				post{ true }
			}
	}
}

main module {
	program[order=random] {
		if bel( true ) then forward.
		if bel( true ) then turn(left).
		if bel( true ) then turn(right).
	}
}

event module {
	program {
		if bel( percept(scream) ) then delete( wumpusIsAlive ).
	}
}

