		on(ab,table).
	}
	program {
	
		if goal(on(ab,table)) , bel(on(X,Y),clear(X)) 
		then moveXfromYtoTable(X,Y) .	
	
		if not(goal(current(I))) , bel(current(J),not(target(J)),K is J+1)
		then adopt(current(K)) .
		
		if a-goal(current(K)) , bel(J is K-1) 
		then updateCurrent(J,K) .
		
	}
	actionspec {
		moveXfromYtoTable(X,Y) {
			pre {block(Y)}
			post {not(on(X,Y)) , on(X,table) , clear(Y)}
		}
		updateCurrent(J,K) {
			pre {true}
			post {not(current(J)) , current(K)}
		}
	}
