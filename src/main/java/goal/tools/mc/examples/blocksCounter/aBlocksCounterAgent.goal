	beliefs {
		block(aa) . block(ab) . block(ac) . block(ad) . block(ae) .
		on(aa,table) . on(ab,aa) . on(ac,ab) . on(ad,ac) . clear(ad) .
		on(ae,table) . clear(ae) .
		current(0) . target(4) .
	}
