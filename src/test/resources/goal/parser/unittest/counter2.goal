init module{
	beliefs{
		counter(0).
	}
}

main module{
	program[order=random]{
		
	%	if bel( percept(hope(X)) ) then insert( hope(X) ).
		if bel(counter(X), X>120) then exit-module.
		if bel(counter(X), Y is X+1, Z is X+2) then print(X) + adopt( counter(Z)) + insert(counter(Y)) + delete(counter(X)).
	}
}

event module {	
	program {
		if bel( percept(gam(hope, X)) ) then insert( gam(hope, X) ).
		if bel( percept(gam(joy, X)) ) then insert( gam(joy,X) ).
	}
}

module printCounter {
	program{
		if bel(counter(X), atom_concat('counter = ', X, Y)) then print(Y).
	}
}
