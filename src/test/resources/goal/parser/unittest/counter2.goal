init module{
	beliefs{
		counter(0).
	}
}

main module{
	program{
		if bel( percept(joy(X)) ) then insert( joy(X) ).
		if bel(counter(X), X>150) then exit-module.
		if bel(counter(X), Y is X+1) then print(X) + insert(counter(Y)) + delete(counter(X)).
	}
}

module printCounter {
	program{
		if bel(counter(X), atom_concat('counter = ', X, Y)) then print(Y).
	}
}
